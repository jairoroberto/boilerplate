// Breakpoints
// -----------

$bp = {
  lg: 1024px,
  md: 800px,
  sm: 600px,
  xs: 400px
}

// Colors
// ------

$color = {}

// Main colors
$color.primary = #3498db
$color.success = #2ecc71
$color.danger = #e74c3c
$color.warning = #f1c40f
$color.info = #22A7F0

// Social colors
$color.facebook = #3b5998
$color.twitter = #55acee
$color.google = #dd4b39
$color.youtube = #bb0000
$color.linkedin = #007bb5

// Gray shades
$color.gray-light = #eee

// Container
// ---------

$container = {
  width: 1024px,
  padding: 20px
}

// Spacing
// -------

$spacing = {
  none: 0,
  x-x-small: 3px,
  x-small: 5px,
  small: 10px
  normal: 15px,
  medium: 20px,
  large: 25px,
  x-large: 30px,
  x-x-large: 35px,
  huge: 40px,
  x-huge: 45px,
  x-x-huge: 50px
}

// Font Family
// -----------

$font-family = {
  primary: 'Helvetica Neue'\, sans-serif,
  secondary: 'Georgia'\, serif
}

// Font size
// ---------

$font-size = {
  x-small: 12px,
  small: 14px,
  normal: 16px,
  medium: 18px,
  large: 24px,
  x-large: 30px,
  x-x-large: 36px,
  huge: 40px
}
