// =============================================================================
// Base
// =============================================================================

*,
*::before,
*::after
  box-sizing border-box

body
  font-family: $font-family.primary
  font-size 100%
  background-color #fff

a
  text-decoration none
  color inherit

.container
  max-width: $container.width
  padding: 0 $container.padding
  margin-left auto
  margin-right auto
