.ui-button
  display: inline-block
  vertical-align: middle
  padding: 10px 30px
  cursor: pointer
  background-color: transparent
  border: none
  outline: none
  color: #fff
  border-radius: 3px
  text-align: center

.ui-button:active:not([disabled])
  box-shadow: inset 0 3px 5px rgba(0,0,0,.125)

// Disabled
// --------

.ui-button[disabled]
  cursor: not-allowed
  opacity: 0.7

// Themes
// ------

for key, val in $color
  .ui-button.-{key}
    background-color: val
    &:hover:not([disabled]),
    &:active:not([disabled])
      background-color: darken(val, 15%)

// Block Modifier
// --------------

.ui-button.-block
  display: block
  width: 100%

.ui-button.-block--sm
  +below($bp.sm)
    display: block
    width: 100%
