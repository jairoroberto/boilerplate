.ui-button
  display: inline-block
  vertical-align: middle
  padding: 10px 30px
  cursor: pointer
  background-color: transparent
  border: none
  outline: none
  color: #fff
  border-radius: 3px
  text-align: center

.ui-button:active:not([disabled])
  box-shadow: inset 0 3px 5px rgba(0,0,0,.125)

.ui-button:not(.-circular) > {$icon-selector}
  display: inline-block
  vertical-align: middle
  margin-right: $spacing.x-small
  position: relative
  top: -1px
  line-height: 0

// Disabled
// --------

.ui-button[disabled]
  cursor: not-allowed
  opacity: 0.7

// Themes
// ------

for key, val in $color
  .ui-button.-{key}
    background-color: val
    &:hover:not([disabled]),
    &:active:not([disabled])
      background-color: darken(val, 15%)

// Block Modifier
// --------------

.ui-button.-block
  display: block
  width: 100%

.ui-button.-block--sm
  +below($bp.sm)
    display: block
    width: 100%

// Sizes
// -----

.ui-button:not(.-circular).-small
  padding: 5px 15px
  font-size: $font-size.small

.ui-button:not(.-circular).-large
  padding: 15px 50px
  font-size: $font-size.large

.ui-button.-circular.-small
  width: 30px
  height: 30px
  font-size: $font-size.x-small

.ui-button.-circular.-large
  width: 60px
  height: 60px
  font-size: $font-size.x-large

// Circular Buttons
// ----------------

.ui-button.-circular
  padding: 0
  width: 38px
  height: 38px
  border-radius: 100%
  line-height: 0
  position: relative

  > {$icon-selector}
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
