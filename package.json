{
  "name": "boilerplate",
  "private": true,
  "scripts": {
    "js": "browserify source/js/main.js -o public/js/bundle.min.js",
    "js:watch": "watchify source/js/main.js -o public/js/bundle.min.js -v",
    "js:prod": "npm run js -- -d -p [minifyify --map=bundle.map --output public/js/bundle.map]",
    "js:lint": "standard source/js/**/*.js --verbose | snazzy",
    "js:clear": "del public/js/**/*",
    "css": "stylus -m source/styl/index.styl --include-css -I node_modules -o public/css/style.min.css",
    "css:autoprefixer": "npm run css -- -u autoprefixer-stylus --with \"{browsers: ['> 1%']}\"",
    "css:prod": "npm run css:autoprefixer -- -u csso-stylus",
    "css:clear": "del public/css/**/*",
    "img": "copy source/img/**/* public/img/",
    "img:clear": "del public/img/**/*",
    "img:prod": "imagemin source/img/**/* --out-dir=public/img",
    "styleguide": "styleguide-plus source/css/**/*.styl -o public/styleguide",
    "serve": "browser-sync start --server 'public' -f='public' --no-ghost-mode",
    "dev": "parallelshell 'npm run serve' 'npm run js:watch' 'npm-watch'",
    "prebuild": "npm run js:lint",
    "build": "parallelshell 'npm run js:prod' 'npm run css:prod' 'npm run img:prod' && echo 'MANDA BALA NO DEPLOY!'"
  },
  "watch": {
    "css": {
      "patterns": [
        "source/styl"
      ],
      "extensions": "styl"
    },
    "img": {
      "patterns": [
        "source/img"
      ],
      "extensions": "jpg,jpeg,png,svg,gif"
    }
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.10.0",
    "browser-sync": "^2.16.0",
    "browserify": "^13.1.0",
    "copy": "^0.3.0",
    "csso-stylus": "0.0.3",
    "del-cli": "^0.2.0",
    "imagemin-cli": "^3.0.0",
    "minifyify": "^7.3.3",
    "npm-watch": "^0.1.6",
    "parallelshell": "^2.0.0",
    "snazzy": "^5.0.0",
    "standard": "^8.1.0",
    "stylus": "^0.54.5",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "jquery": "^3.1.0",
    "lodash": "^4.16.1",
    "normalize.css": "^4.2.0"
  }
}
